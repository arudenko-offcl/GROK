{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/api/*": [
        "src/api/*"
      ],
      "@/app/*": [
        "src/app/*"
      ],
      "@/constants/*": [
        "src/constants/*"
      ],
      "@/helpers/*": [
        "src/helpers/*"
      ],
      "@/hooks/*": [
        "src/hooks/*"
      ],
      "@/modules/*": [
        "src/modules/*"
      ],
      "@/pages/*": [
        "src/pages/*"
      ],
      "@/routes/*": [
        "src/routes/*"
      ],
      "@/store/*": [
        "src/store/*"
      ],
      "@/ui/*": [
        "src/ui/*"
      ],
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
